<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="hikariConnection" class="com.excilys.cdb.dao.HikariCP" scope="singleton" autowire="byName" lazy-init="true"></bean>
	<bean id="daoCompany" class="com.excilys.cdb.dao.JDBCCompany" scope="prototype" autowire="byName" lazy-init="true"></bean>
	<bean id="daoCOmputer" class="com.excilys.cdb.dao.JDBCComputer" scope="prototype" autowire="byName" lazy-init="true"></bean>
	<bean id="companyService" class="com.excilys.cdb.services.CompanyServices" scope="prototype" autowire="byName" lazy-init="true"></bean>
	<bean id="computerService" class="com.excilys.cdb.services.ComputerServices" scope="prototype" autowire="byName" lazy-init="true"></bean>
	
</beans>